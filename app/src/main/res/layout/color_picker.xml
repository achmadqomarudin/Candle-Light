<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="240dp"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:background="#000"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="#fff" />

        <ImageView
            android:id="@+id/color_picker_imageView_color"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/color_dish" />

        <TextView
            android:id="@+id/color_picker_textView_alpha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Transparency"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#fff" />

        <SeekBar
            android:id="@+id/color_picker_seekBar_alpha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:max="100"
            android:thumb="@drawable/thumb" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="#fff" />

        <TextView
            android:id="@+id/color_picker_textView_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Red"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ff0000" />

        <SeekBar
            android:id="@+id/color_picker_seekBar_red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:max="255"
            android:thumb="@drawable/thumb" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="#fff" />

        <TextView
            android:id="@+id/color_picker_textView_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Green"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#00ff00" />

        <SeekBar
            android:id="@+id/color_picker_seekBar_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:max="255"
            android:thumb="@drawable/thumb" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="#fff" />

        <TextView
            android:id="@+id/color_picker_textView_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Blue"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#0000ff" />

        <SeekBar
            android:id="@+id/color_picker_seekBar_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:max="255"
            android:thumb="@drawable/thumb" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="60dp"
            android:layout_marginTop="5dp"
            android:background="#fff" />
    </LinearLayout>

</ScrollView>